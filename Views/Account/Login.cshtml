@model ToDoList.Models.ViewModels.SignInUserModel

@{
    Layout = "_EnterLayout";
}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form" asp-controller="Account" asp-action="Login" method="post" >
                    <p class="p-b-32">
                        <span class="login100-form-title">
                            Sign in
                        </span>
                        <a asp-controller="Registration" asp-action="Index">
                            Or create account
                        </a>
                    </p>

                    <span class="txt1 p-b-11">
                        Login
                    </span>
                    <span asp-validation-for="Login" class="text-danger flex-sb flex-w"></span>
                    @if (ViewData.ModelState["SignInErr"] != null)
                    {
                        var signInErrErrorMessage = ViewData.ModelState["SignInErr"].Errors[0].ErrorMessage;
                        <span class="text-danger flex-sb flex-w">@signInErrErrorMessage</span>
                    }
                    <div class="wrap-input100 validate-input m-b-36">
                        <input class="input100" asp-for="Login">
                    </div>

                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <span asp-validation-for="Password" class="text-danger flex-sb flex-w"></span>
                    <div class="wrap-input100 validate-input m-b-12">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <input class="input100" asp-for="Password">
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

