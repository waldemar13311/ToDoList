@model ToDoList.Models.ViewModels.CreateUserModel

@{
    Layout = "_EnterLayout";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form asp-controller="Registration" asp-action="Create" method="post" class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32">
                    Create account
                </span>

                <span class="txt1 p-b-10">
                    Login
                </span>

                @*Errors span*@
                <span asp-validation-for="Login" class="text-danger"></span>
                @if (ViewData.ModelState["DuplicateUserName"] != null)
                {
                    var duplicateUserNameErrorMessage = ViewData.ModelState["DuplicateUserName"].Errors[0].ErrorMessage;
                    <span class="text-danger">@duplicateUserNameErrorMessage</span>
                }

                <div class="wrap-input100 validate-input m-b-34" data-validate="Login is required">
                    <input asp-for="Login" class="input100">
                </div>

                <span class="txt1 p-b-10">
                    Email
                </span>
                <span asp-validation-for="Email" class="text-danger"></span>
                @if (ViewData.ModelState["DuplicateEmail"] != null)
                {
                    var duplicateEmailErrorMessage = ViewData.ModelState["DuplicateEmail"].Errors[0].ErrorMessage;
                    <span class="text-danger">@duplicateEmailErrorMessage</span>
                }

                <div class="wrap-input100 validate-input m-b-34" data-validate="Email is required">
                    <input asp-for="Email" class="input100">
                </div>

                <span class="txt1 p-b-10">
                    Password
                </span>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="wrap-input100 validate-input m-b-34" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="Password" class="input100">
                </div>

                <span class="txt1 p-b-10">
                    Confirm password
                </span>
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                <div class="wrap-input100 validate-input m-b-34" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="ConfirmedPassword" class="input100">
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

